{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src/pages/**/*",
    "src/components/**/*",
    "src/layouts/**/*",
    "src/lib/**/*",
    "src/content/**/*",
    "src/assets/**/*",
    "src/styles/**/*",
    "astro.config.*",
    "env.d.ts"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ]
    }
  }
}
