---
import MainLayout from "../layouts/MainLayout.astro";
import coupons from "../data/coupons.json";
import DealCard from "../components/coupon/DealCard.astro";

// Get best Python courses (highest rated and most enrolled)
const bestPythonCourses = coupons.filter((coupon: any) => {
  const categoryLower = coupon.category?.toLowerCase() || '';
  const subcategoryLower = coupon.subcategory?.toLowerCase() || '';
  const titleLower = coupon.title?.toLowerCase() || '';
  const descriptionLower = coupon.description?.toLowerCase() || '';
  
  // Filter for Python courses with high ratings
  return (categoryLower.includes('python') || 
         subcategoryLower.includes('python') ||
         titleLower.includes('python') ||
         descriptionLower.includes('python')) &&
         (coupon.rating && coupon.rating >= 4.5);
}).sort((a: any, b: any) => {
  // Sort by rating (descending) then students (descending)
  const ratingDiff = ((b as any).rating || 0) - ((a as any).rating || 0);
  if (ratingDiff !== 0) return ratingDiff;
  
  const studentsDiff = ((b as any).students || 0) - ((a as any).students || 0);
  return studentsDiff;
}).slice(0, 12); // Top 12 courses

// SEO data
const pageTitle = `Best Python Courses 2026 - Top Rated Python Udemy Courses | CoursesWyn`;
const pageDescription = `Discover the ${bestPythonCourses.length} best Python courses of 2026. Top-rated Python Udemy courses with 4.5+ stars, thousands of students, and verified coupons for maximum savings.`;

// Enhanced Schema with topical authority
const bestPythonSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Best Python Courses 2026",
  "description": pageDescription,
  "url": "https://courseswyn.com/best-python-courses-2026/",
  "mainEntityOfPage": {
    "@type": "CollectionPage",
    "name": "Best Python Courses 2026",
    "description": pageDescription,
    "url": "https://courseswyn.com/best-python-courses-2026/"
  },
  "about": {
    "@type": "Thing",
    "name": "Python Programming"
  },
  "isPartOf": {
    "@type": "CollectionPage",
    "name": "Python Udemy Coupons",
    "url": "https://courseswyn.com/python-udemy-coupons/"
  },
  "mainEntity": {
    "@type": "ItemList",
    "name": "Best Python Courses",
    "description": pageDescription,
    "numberOfItems": bestPythonCourses.length,
    "itemListElement": bestPythonCourses.map((course: any, index: number) => ({
      "@type": "Course",
      "position": index + 1,
      "name": course.title,
      "description": course.description,
      "provider": {
        "@type": "Organization",
        "name": course.provider
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": course.rating,
        "bestRating": "5",
        "worstRating": "1",
        ...(course.students && { ratingCount: course.students })
      },
      "offers": {
        "@type": "Offer",
        "price": course.price === 0 ? "Free" : `$${course.price}`,
        "priceCurrency": "USD",
        "availability": "https://schema.org/InStock",
        "validFrom": course.createdAt,
        "url": `https://courseswyn.com/coupon/${course.slug}`
      }
    }))
  }
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://courseswyn.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Python Udemy Coupons",
      "item": "https://courseswyn.com/python-udemy-coupons/"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Best Python Courses 2026",
      "item": "https://courseswyn.com/best-python-courses-2026/"
    }
  ]
};
