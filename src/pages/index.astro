      "name": "Free Udemy Courses",
      "description": "2,500+ verified free Udemy coupons",
      "url": "https://courseswyn.com/coupon/",
      "price": "0",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Organization",
        "name": "CoursesWyn"
      }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://courseswyn.com"
        }
