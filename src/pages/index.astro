import { fetchPosts } from "../lib/posts";
import coupons from "../data/coupons.json";

const allPosts = await fetchPosts();
const featuredPosts = allPosts.slice(0, 3);
const featuredCoupons = coupons.slice(0, 6);

function getCurrentMonthYear(): string {
  const now = new Date();
  const options: Intl.DateTimeFormatOptions = {
    month: "long",
    year: "numeric",
  };
  return now.toLocaleDateString("en-US", options);
}

const totalCoupons = coupons.length;
const currentMonthYear = getCurrentMonthYear();

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      name: "CoursesWyn - 100% Off Udemy Coupons",
      url: "https://courseswyn.com",
      description: `Get ${totalCoupons}+ verified 100% free Udemy coupons and discount codes in ${currentMonthYear}. Save money on premium courses with lifetime access.`,
    },
    {
      "@type": "Organization",
      name: "CoursesWyn",
      url: "https://courseswyn.com",
      description: `${totalCoupons}+ free Udemy coupons & course reviews`,
    },
    {
      "@type": "BreadcrumbList",
      itemListElement: [
        {
          "@type": "ListItem",
          position: 1,
          name: "Home",
          item: "https://courseswyn.com",
        },
        {
          "@type": "ListItem",
          position: 2,
          name: "Coupons",
          item: "https://courseswyn.com/coupon/",
        },
        {
          "@type": "ListItem",
          position: 3,
          name: "Reviews",
          item: "https://courseswyn.com/blog/",
        },
      ],
    },
  ],
};
