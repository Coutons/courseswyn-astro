---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import DealCard from "../components/coupon/DealCard.astro";
import BlogCard from "../components/blog/BlogCard.astro";
import { fetchPosts } from "../lib/posts";
import coupons from "../data/coupons.json";

const allPosts = await fetchPosts();
const featuredPosts = allPosts.slice(0, 3);

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      name: "CoursesWyn",
      url: "https://courseswyn.com",
      description: "2,500+ verified free Udemy coupons and independent course reviews. Save up to 95% on premium courses.",
      potentialAction: {
        "@type": "SearchAction",
        target: {
          "@type": "EntryPoint",
          urlTemplate: "https://courseswyn.com/coupon/?search={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    },
    {
      "@type": "Organization",
      name: "CoursesWyn",
      url: "https://courseswyn.com",
      logo: "https://courseswyn.com/logo.png",
      description: "Free Udemy coupons and independent course reviews platform with 2,500+ verified deals updated daily.",
      sameAs: [
        "https://twitter.com/courseswyn",
        "https://reddit.com/r/courseswyn"
      ],
      contactPoint: {
        "@type": "ContactPoint",
        contactType: "Customer Support",
        url: "https://courseswyn.com/contact-us"
      }
    },
    {
      "@type": "FAQPage",
      mainEntity: [
        {
          "@type": "Question",
          name: "Are the coupons really 100% free?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Yes, absolutely. Every coupon on CoursesWyn is verified to work 100% free. We don't ask for credit cards, don't require signups, and don't take commissions from you. Udemy is the one offering these courses for free."
          }
        },
        {
          "@type": "Question",
          name: "How do you verify coupons work?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Every coupon is bot-verified in real-time using automated systems. We test links daily to ensure they apply the discount. If a coupon stops working, it's removed from our site within minutes."
          }
        },
        {
          "@type": "Question",
          name: "Do I need to sign up or provide email?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "No signup required on CoursesWyn. Just click the coupon, it applies to your Udemy cart automatically, then you enroll on Udemy. You'll only need a Udemy account (which is free) to take the course."
          }
        },
        {
          "@type": "Question",
          name: "Will I have permanent access to courses?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Yes. Once you enroll in a course on Udemy (even with a free coupon), you have lifetime access to all course materials, videos, and downloads. This access never expires."
          }
        },
        {
          "@type": "Question",
          name: "What are the best Udemy courses to take in 2026?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "We identify the best Udemy courses by testing for 2026 relevance, instructor expertise, and hands-on projects. Our top categories include Generative AI, Python Programming, Web Development, Data Science, and Digital Marketing."
          }
        }
      ]
    },
    {
      "@type": "AggregateOffer",
      "name": "Free Udemy Courses",
      "description": "2,500+ verified free Udemy coupons",
      "url": "https://courseswyn.com/coupon/",
      "price": "0",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Organization",
        "name": "CoursesWyn"
      }
    }
  ]
};
---

<Layout
  title="CoursesWyn - Free Udemy Coupons & Course Reviews 2026"
  description="2,500+ verified free Udemy coupons & independent course reviews. Save up to 95% on premium courses for AI, Python, Web Development, Data Science & more. Updated daily with working deals."
  structuredData={schema}
>
  <Hero
    title="Free Udemy Coupons & Course Reviews"
    subtitle="2,500+ verified free Udemy coupons updated daily. Independent expert reviews, trusted deals, and learning guides. Save up to 95% on premium courses ‚Äî no credit card required."
    cta={{ text: "Browse Free Coupons", href: "/coupon/" }}
  />

  <!-- Stats Section (SEO: Trust Authority + Engagement Metrics) -->
  <section class="mb-20 grid grid-cols-3 gap-6 md:gap-8">
    <div class="text-center p-6 rounded-lg border border-white/10 bg-white/5">
      <div class="text-3xl md:text-4xl font-bold text-mint-400 mb-2">2,500+</div>
      <div class="text-sm md:text-base text-white/70">Active Coupons</div>
    </div>
    <div class="text-center p-6 rounded-lg border border-white/10 bg-white/5">
      <div class="text-3xl md:text-4xl font-bold text-mint-400 mb-2">50,000+</div>
      <div class="text-sm md:text-base text-white/70">Courses Reviewed</div>
    </div>
    <div class="text-center p-6 rounded-lg border border-white/10 bg-white/5">
      <div class="text-3xl md:text-4xl font-bold text-mint-400 mb-2">100%</div>
      <div class="text-sm md:text-base text-white/70">Free & Verified</div>
    </div>
  </section>

  <!-- How It Works Section (SEO: Process Steps + Intent Clarity) -->
  <section class="mb-20">
    <h2 class="text-3xl font-bold text-white mb-12 text-center">How It Works in 3 Steps</h2>
    <div class="grid md:grid-cols-3 gap-8">
      <div class="relative">
        <div class="flex items-center justify-center w-12 h-12 rounded-full bg-mint-500/20 border border-mint-500/50 text-mint-400 font-bold mb-4">
          01
        </div>
        <h3 class="text-xl font-semibold text-white mb-3">Browse Verified Coupons</h3>
        <p class="text-white/70">Explore 2,000+ active coupons across all categories. Every coupon is verified in real-time to ensure it works.</p>
      </div>
      <div class="relative">
        <div class="flex items-center justify-center w-12 h-12 rounded-full bg-mint-500/20 border border-mint-500/50 text-mint-400 font-bold mb-4">
          02
        </div>
        <h3 class="text-xl font-semibold text-white mb-3">Click to Apply</h3>
        <p class="text-white/70">Click any coupon to automatically apply it to your Udemy cart. No copy-pasting, no hassle. It just works.</p>
      </div>
      <div class="relative">
        <div class="flex items-center justify-center w-12 h-12 rounded-full bg-mint-500/20 border border-mint-500/50 text-mint-400 font-bold mb-4">
          03
        </div>
        <h3 class="text-xl font-semibold text-white mb-3">Start Learning</h3>
        <p class="text-white/70">Enroll on Udemy in premium courses worth $200+ for free. Lifetime access and certificate included.</p>
      </div>
    </div>
  </section>

  <!-- Featured Deals Section -->
  <section class="mb-20">
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-white mb-2">Today's Highlights</h2>
      <p class="text-white/70">Fresh coupons and premium courses available right now</p>
    </div>
    <div class="deals-grid">
      {coupons.slice(0, 3).map((coupon) => (
        <DealCard
          title={coupon.title}
          description={coupon.description}
          slug={coupon.slug}
          image={coupon.image}
          provider={coupon.provider}
          category={coupon.category}
          rating={coupon.rating}
          students={coupon.students}
          price={coupon.price}
          originalPrice={coupon.originalPrice}
          discount={coupon.discount}
          url={coupon.url}
        />
      ))}
    </div>
    <div class="mt-6 text-center">
      <a href="/coupon/" class="text-mint-400 hover:text-mint-300 font-medium text-lg">
        View all deals ‚Üí
      </a>
    </div>
  </section>

  <!-- Featured Blog Posts -->
  <section class="mb-20">
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-white mb-2">Latest Course Reviews</h2>
      <p class="text-white/70">In-depth expert reviews and learning guides updated daily</p>
    </div>
    <div class="deals-grid">
      {featuredPosts.map((post) => (
        <BlogCard
          title={post.data.title}
          description={post.data.description}
          slug={post.slug}
          pubDate={post.data.pubDate}
          tags={post.data.tags}
          image={post.data.image}
        />
      ))}
    </div>
    <div class="mt-6 text-center">
      <a href="/blog/" class="text-mint-400 hover:text-mint-300 font-medium text-lg">
        Read more articles ‚Üí
      </a>
    </div>
  </section>

  <!-- Why Choose CoursesWyn Section (SEO: Trust & Differentiation) -->
  <section class="mb-20 py-12 border-y border-white/10">
    <h2 class="text-3xl font-bold text-white mb-12 text-center">Why Choose CoursesWyn?</h2>
    <div class="grid md:grid-cols-2 gap-8">
      <div class="p-6 rounded-lg border border-white/10 bg-white/5">
        <div class="text-2xl mb-3">‚úì Independent Reviews</div>
        <p class="text-white/70">We buy and test courses ourselves. No paid placements, just honest student-focused rankings based on curriculum depth and real results.</p>
      </div>
      <div class="p-6 rounded-lg border border-white/10 bg-white/5">
        <div class="text-2xl mb-3">‚úì Verified Coupons</div>
        <p class="text-white/70">Every coupon is bot-verified in real-time. Get courses worth $200+ for free. Save up to 95% with guaranteed working links.</p>
      </div>
      <div class="p-6 rounded-lg border border-white/10 bg-white/5">
        <div class="text-2xl mb-3">‚úì Always Updated</div>
        <p class="text-white/70">New courses and coupons added daily. Our guides are refreshed monthly to ensure 2026-ready content and current best practices.</p>
      </div>
      <div class="p-6 rounded-lg border border-white/10 bg-white/5">
        <div class="text-2xl mb-3">‚úì Expert Curation</div>
        <p class="text-white/70">Handpicked by learning specialists with 10+ years in EdTech. Courses are ranked by instructor reputation, engagement metrics, and student success.</p>
      </div>
    </div>
  </section>

  <!-- Popular Categories Section (SEO: Internal Linking + Topic Coverage) -->
  <section class="mb-20">
    <h2 class="text-3xl font-bold text-white mb-8 text-center">Browse by Category</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <a href="/blog/?tag=ai" class="p-4 rounded-lg bg-white/5 border border-white/10 hover:border-mint-400/50 hover:bg-mint-400/10 transition text-center">
        <div class="font-semibold text-white mb-1">ü§ñ AI & Machine Learning</div>
        <div class="text-xs text-white/60">100+ courses</div>
      </a>
      <a href="/blog/?tag=python" class="p-4 rounded-lg bg-white/5 border border-white/10 hover:border-mint-400/50 hover:bg-mint-400/10 transition text-center">
        <div class="font-semibold text-white mb-1">üêç Python</div>
        <div class="text-xs text-white/60">80+ courses</div>
      </a>
      <a href="/blog/?tag=web" class="p-4 rounded-lg bg-white/5 border border-white/10 hover:border-mint-400/50 hover:bg-mint-400/10 transition text-center">
        <div class="font-semibold text-white mb-1">üåê Web Development</div>
        <div class="text-xs text-white/60">75+ courses</div>
      </a>
      <a href="/blog/?tag=data" class="p-4 rounded-lg bg-white/5 border border-white/10 hover:border-mint-400/50 hover:bg-mint-400/10 transition text-center">
        <div class="font-semibold text-white mb-1">üìä Data Science</div>
        <div class="text-xs text-white/60">60+ courses</div>
      </a>
      <a href="/blog/?tag=java" class="p-4 rounded-lg bg-white/5 border border-white/10 hover:border-mint-400/50 hover:bg-mint-400/10 transition text-center">
        <div class="font-semibold text-white mb-1">‚òï Java & Backend</div>
        <div class="text-xs text-white/60">50+ courses</div>
      </a>
      <a href="/blog/?tag=excel" class="p-4 rounded-lg bg-white/5 border border-white/10 hover:border-mint-400/50 hover:bg-mint-400/10 transition text-center">
        <div class="font-semibold text-white mb-1">üìà Excel & Business</div>
        <div class="text-xs text-white/60">45+ courses</div>
      </a>
      <a href="/blog/?tag=design" class="p-4 rounded-lg bg-white/5 border border-white/10 hover:border-mint-400/50 hover:bg-mint-400/10 transition text-center">
        <div class="font-semibold text-white mb-1">üé® Design & Creative</div>
        <div class="text-xs text-white/60">40+ courses</div>
      </a>
      <a href="/blog/" class="p-4 rounded-lg bg-white/5 border border-white/10 hover:border-mint-400/50 hover:bg-mint-400/10 transition text-center">
        <div class="font-semibold text-white mb-1">üìö All Categories</div>
        <div class="text-xs text-white/60">500+ courses</div>
      </a>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="rounded-2xl border border-mint-500/20 bg-gradient-to-r from-mint-500/10 to-transparent p-12 text-center mb-20">
    <h2 class="text-3xl font-bold text-white mb-3">Start Learning Today</h2>
    <p class="text-white/70 mb-8 max-w-2xl mx-auto text-lg">
      Get instant access to premium Udemy courses worth $200+ for free. Lifetime access guaranteed. No credit card required.
    </p>
    <a href="/coupon/" class="inline-block bg-mint-500 hover:bg-mint-600 text-slate-900 font-semibold px-8 py-3 rounded-lg transition duration-200 text-lg">
      Get Free Courses Now
    </a>
  </section>

  <!-- FAQ Section (SEO: Question Keywords) -->
  <section class="mb-20 max-w-3xl mx-auto">
    <h2 class="text-3xl font-bold text-white mb-10 text-center">Frequently Asked Questions</h2>
    <div class="space-y-4">
      <details class="group bg-white/5 rounded-lg border border-white/10 overflow-hidden" open>
        <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-white/10 transition-colors font-semibold text-white">
          Are the coupons really 100% free?
          <span class="text-mint-400 group-open:rotate-180 transition-transform">‚ñº</span>
        </summary>
        <div class="p-4 pt-0 text-white/70 border-t border-white/10 mt-2">
          Yes, absolutely. Every coupon on CoursesWyn is verified to work 100% free. We don't ask for credit cards, don't require signups, and don't take commissions from you. Udemy is the one offering these courses for free.
        </div>
      </details>

      <details class="group bg-white/5 rounded-lg border border-white/10 overflow-hidden">
        <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-white/10 transition-colors font-semibold text-white">
          How do you verify coupons work?
          <span class="text-mint-400 group-open:rotate-180 transition-transform">‚ñº</span>
