      potentialAction: {
        "@type": "SearchAction",
        target: {
          "@type": "EntryPoint",
          urlTemplate: "https://courseswyn.com/coupon/?search={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    },
    {
      "@type": "Organization",
      name: "CoursesWyn",
      url: "https://courseswyn.com",
      logo: "https://courseswyn.com/logo.png",
      description: "Free Udemy coupons and independent course reviews platform with 2,500+ verified deals updated daily.",
      sameAs: [
        "https://twitter.com/courseswyn",
        "https://reddit.com/r/courseswyn"
      ],
      contactPoint: {
        "@type": "ContactPoint",
        contactType: "Customer Support",
        url: "https://courseswyn.com/contact-us"
      }
    },
    {
      "@type": "LocalBusiness",
      name: "CoursesWyn",
      description: "Online platform for free Udemy course coupons and reviews",
      url: "https://courseswyn.com",
      contactPoint: {
        "@type": "ContactPoint",
