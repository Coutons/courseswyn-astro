---
import MainLayout from "../layouts/MainLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props as { post: CollectionEntry<'blog'> };
const { data } = post;

// Render the content
const { Content } = await post.render();

const title = data.title;
const description = data.description;
const canonical = `https://courseswyn.com/${post.slug}/`;
const ogImage = data.image?.src;

// Article structured data (always included)
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  headline: title,
  description: description,
  url: canonical,
  datePublished: data.pubDate.toISOString(),
  dateModified: (data.updatedAt || data.pubDate).toISOString(),
  author: {
    "@type": "Organization",
    name: "CoursesWyn",
    url: "https://courseswyn.com",
  },
  publisher: {
    "@type": "Organization",
    name: "CoursesWyn",
    url: "https://courseswyn.com",
    logo: {
      "@type": "ImageObject",
      url: "https://courseswyn.com/logo.png",
    },
  },
  image: ogImage ? { "@type": "ImageObject", url: ogImage } : undefined,
};

// Use article schema as default
const structuredData = articleSchema;
---

<MainLayout
  title={title}
  description={description}
  canonical={canonical}
  ogImage={ogImage}
  structuredData={structuredData}
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <article class="prose prose-invert prose-lg max-w-none">
      <header class="mb-12">
        <h1 class="text-4xl sm:text-5xl font-black text-white mb-4">{title}</h1>
        <p class="text-lg text-muted-foreground">{description}</p>
        <div class="flex items-center gap-6 text-sm text-gray-400 border-t border-[#2d3748] pt-8 mt-4">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span>Published: {new Date(data.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
          </div>
          {data.updatedAt && (
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              <span class="text-[#10b981]">Updated: {new Date(data.updatedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
            </div>
          )}
        </div>
      </header>

      <div class="prose-headings">
        <Content />
      </div>

      {data.affiliate_links && data.affiliate_links.length > 0 && (
        <section class="mt-16">
          <h2 class="text-2xl font-black text-white mb-8">Recommended Courses</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {data.affiliate_links.map((link: any) => (
              <a
                href={link.url}
                target="_blank"
                rel="nofollow noopener noreferrer"
                class="block p-6 bg-card/60 border border-border rounded-2xl hover:bg-card/80 transition-all group"
              >
                <span class="text-primary font-bold">{link.text}</span>
              </a>
            ))}
          </div>
        </section>
      )}
    </article>
  </div>
</MainLayout>
