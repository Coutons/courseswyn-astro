---
import MainLayout from "../layouts/MainLayout.astro";
import coupons from "../data/coupons.json";
import DealCard from "../components/coupon/DealCard.astro";

// Get free Python courses
const freePythonCourses = coupons.filter((coupon: any) => {
  const categoryLower = coupon.category?.toLowerCase() || '';
  const subcategoryLower = coupon.subcategory?.toLowerCase() || '';
  const titleLower = coupon.title?.toLowerCase() || '';
  const descriptionLower = coupon.description?.toLowerCase() || '';
  
  // Filter for free Python courses
  return (categoryLower.includes('python') || 
         subcategoryLower.includes('python') ||
         titleLower.includes('python') ||
         descriptionLower.includes('python')) &&
         (coupon.price === 0 || String(coupon.price).toLowerCase().includes('free'));
}).sort((a: any, b: any) => {
  // Sort by students (descending) then rating (descending)
  const studentsDiff = ((b as any).students || 0) - ((a as any).students || 0);
  if (studentsDiff !== 0) return studentsDiff;
  
  const ratingDiff = ((b as any).rating || 0) - ((a as any).rating || 0);
  return ratingDiff;
});

// SEO data
const pageTitle = `Free Python Courses - 100% Off Udemy Python Coupons 2026 | CoursesWyn`;
const pageDescription = `Get ${freePythonCourses.length}+ completely free Python courses with Udemy coupons. Learn Python programming, Django, Flask, data science, and machine learning without spending a dime.`;

// Enhanced Schema with topical authority
const freePythonSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Free Python Courses",
  "description": pageDescription,
  "url": "https://courseswyn.com/free-python-courses/",
  "mainEntityOfPage": {
    "@type": "CollectionPage",
    "name": "Free Python Courses",
    "description": pageDescription,
    "url": "https://courseswyn.com/free-python-courses/"
  },
  "about": {
    "@type": "Thing",
    "name": "Python Programming"
  },
  "isPartOf": {
    "@type": "CollectionPage",
    "name": "Python Udemy Coupons",
    "url": "https://courseswyn.com/python-udemy-coupons/"
  },
  "mainEntity": {
    "@type": "ItemList",
    "name": "Free Python Courses",
    "description": pageDescription,
    "numberOfItems": freePythonCourses.length,
    "itemListElement": freePythonCourses.map((course: any, index: number) => ({
      "@type": "Course",
      "position": index + 1,
      "name": course.title,
      "description": course.description,
      "provider": {
        "@type": "Organization",
        "name": course.provider
      },
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD",
        "availability": "https://schema.org/InStock",
        "validFrom": course.createdAt,
        "url": `https://courseswyn.com/coupon/${course.slug}`
      }
    }))
  }
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://courseswyn.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Python Udemy Coupons",
      "item": "https://courseswyn.com/python-udemy-coupons/"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Free Python Courses",
      "item": "https://courseswyn.com/free-python-courses/"
    }
  ]
};
