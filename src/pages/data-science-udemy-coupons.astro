---
import MainLayout from "../layouts/MainLayout.astro";
import coupons from "../data/coupons.json";
import DealCard from "../components/coupon/DealCard.astro";

// Get Data Science courses from coupons data
const dataScienceCourses = coupons.filter((coupon: any) => {
  const categoryLower = coupon.category?.toLowerCase() || '';
  const subcategoryLower = coupon.subcategory?.toLowerCase() || '';
  const titleLower = coupon.title?.toLowerCase() || '';
  const descriptionLower = coupon.description?.toLowerCase() || '';
  
  // Filter for Data Science related courses
  return categoryLower.includes('data science') || 
         subcategoryLower.includes('data science') ||
         titleLower.includes('data science') ||
         titleLower.includes('machine learning') ||
         titleLower.includes('data analysis') ||
         titleLower.includes('analytics') ||
         titleLower.includes('pandas') ||
         titleLower.includes('numpy') ||
         titleLower.includes('tensorflow') ||
         titleLower.includes('scikit-learn') ||
         descriptionLower.includes('data science') ||
         descriptionLower.includes('machine learning') ||
         descriptionLower.includes('data analysis');
}).sort((a: any, b: any) => {
  // Sort by students (descending) then rating (descending)
  const studentsDiff = ((b as any).students || 0) - ((a as any).students || 0);
  if (studentsDiff !== 0) return studentsDiff;
  
  const ratingDiff = ((b as any).rating || 0) - ((a as any).rating || 0);
  return ratingDiff;
});

// Dynamic freshness stats
const today = new Date();
const thisWeek = dataScienceCourses.filter((coupon: any) => {
  const couponDate = new Date(coupon.createdAt || coupon.date);
  const daysDiff = Math.floor((today.getTime() - couponDate.getTime()) / (1000 * 60 * 60 * 24));
  return daysDiff <= 7;
}).length;

const expiringSoon = dataScienceCourses.filter((coupon: any) => {
  if (!coupon.expiresAt) return false;
  const expiryDate = new Date(coupon.expiresAt);
  const daysDiff = Math.floor((expiryDate.getTime() - today.getTime()) / (1000 * 60 * 60 * 24));
  return daysDiff <= 1 && daysDiff >= 0;
}).length;

// SEO data
const pageTitle = `Data Science Udemy Coupons - Free Data Courses 2026 | CoursesWyn`;
const pageDescription = `Get ${dataScienceCourses.length}+ verified data science Udemy coupons and free courses. Learn machine learning, data analysis, Python, pandas, NumPy, and AI with 100% off coupons.`;

// SEO-optimized Course Schema with mainEntityOfPage
const dataScienceSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Data Science Udemy Coupons",
  "description": pageDescription,
  "url": "https://courseswyn.com/data-science-udemy-coupons/",
  "mainEntityOfPage": {
    "@type": "CollectionPage",
    "name": "Data Science Udemy Coupons",
    "description": pageDescription,
    "url": "https://courseswyn.com/data-science-udemy-coupons/"
  },
  "about": {
    "@type": "Thing",
    "name": "Data Science"
  },
  "mainEntity": {
    "@type": "ItemList",
    "name": "Data Science Courses",
    "description": pageDescription,
    "numberOfItems": dataScienceCourses.length,
    "itemListElement": dataScienceCourses.map((course: any, index: number) => ({
      "@type": "Course",
      "position": index + 1,
      "name": course.title,
      "description": course.description,
      "provider": {
        "@type": "Organization",
        "name": course.provider
      },
      "offers": {
        "@type": "Offer",
        "price": course.price === 0 ? "Free" : `$${course.price}`,
        "priceCurrency": "USD",
        "availability": "https://schema.org/InStock",
        "validFrom": course.createdAt,
        "url": `https://courseswyn.com/coupon/${course.slug}`
      }
    }))
  }
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Do I need to be good at math to learn data science?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "While strong math skills help, you don't need to be a math genius. Focus on statistics, linear algebra, and calculus concepts as they come up. Many data science courses cover the necessary math foundations."
      }
    },
    {
      "@type": "Question",
      "name": "Which programming language is best for data science?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Python is the most popular choice for data science due to its extensive libraries (pandas, NumPy, scikit-learn, TensorFlow). R is also popular in academia and research. Start with Python and expand as needed."
      }
    },
    {
      "@type": "Question",
      "name": "Can I become a data scientist without a degree?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Many successful data scientists are self-taught or have completed bootcamps. What matters most is your portfolio, problem-solving skills, and ability to work with data. Udemy courses provide excellent foundation."
      }
    },
    {
      "@type": "Question",
      "name": "How long does it take to become a data scientist?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "With dedicated learning, you can become job-ready in 8-12 months. This timeline varies based on your prior experience, mathematical background, and the time you can commit to practice and projects."
      }
    }
  ]
};
