---
import MainLayout from "../../layouts/MainLayout.astro";
import coupons from "../../data/coupons.json";
import DealCard from "../../components/coupon/DealCard.astro";

// Get Data Science courses from coupons data
const dataScienceCourses = coupons.filter((coupon: any) => {
  const categoryLower = coupon.category?.toLowerCase() || '';
  const subcategoryLower = coupon.subcategory?.toLowerCase() || '';
  const titleLower = coupon.title?.toLowerCase() || '';
  const descriptionLower = coupon.description?.toLowerCase() || '';
  
  // Filter for Data Science related courses
  return categoryLower.includes('data science') || 
         subcategoryLower.includes('data science') ||
         titleLower.includes('data science') ||
         titleLower.includes('machine learning') ||
         titleLower.includes('data analysis') ||
         titleLower.includes('analytics') ||
         titleLower.includes('pandas') ||
         titleLower.includes('numpy') ||
         titleLower.includes('tensorflow') ||
         titleLower.includes('scikit-learn') ||
         descriptionLower.includes('data science') ||
         descriptionLower.includes('machine learning') ||
         descriptionLower.includes('data analysis');
}).sort((a: any, b: any) => {
  // Sort by students (descending) then rating (descending)
  const studentsDiff = ((b as any).students || 0) - ((a as any).students || 0);
  if (studentsDiff !== 0) return studentsDiff;
  
  const ratingDiff = ((b as any).rating || 0) - ((a as any).rating || 0);
  return ratingDiff;
});

// SEO data
const pageTitle = `Data Science Udemy Coupons - Free Data Courses 2026 | CoursesWyn`;
const pageDescription = `Get ${dataScienceCourses.length}+ verified data science Udemy coupons and free courses. Learn machine learning, data analysis, Python, pandas, NumPy, and AI with 100% off coupons.`;

// Structured data
const dataScienceSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Data Science Udemy Coupons",
  "description": pageDescription,
  "url": "https://courseswyn.com/category/data-science-udemy-coupons/",
  "mainEntity": {
    "@type": "ItemList",
    "name": "Data Science Courses",
    "description": pageDescription,
    "numberOfItems": dataScienceCourses.length,
    "itemListElement": dataScienceCourses.map((course: any, index: number) => ({
      "@type": "Course",
      "position": index + 1,
      "name": course.title,
      "description": course.description,
      "provider": {
        "@type": "Organization",
        "name": course.provider
      },
      "offers": {
        "@type": "Offer",
        "price": course.price === 0 ? "Free" : `$${course.price}`,
        "priceCurrency": "USD",
        "availability": "https://schema.org/InStock",
        "validFrom": course.createdAt,
        "url": `https://courseswyn.com/coupon/${course.slug}`
      }
    }))
  }
};
