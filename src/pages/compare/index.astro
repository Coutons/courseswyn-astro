---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../lib/posts';

const comparePosts = await getCollection('blog', ({ id }) => {
  return id.startsWith('compare/');
});

const sortedPosts = comparePosts.sort((a, b) => 
  (b.data.updatedAt || b.data.pubDate).getTime() - (a.data.updatedAt || a.data.pubDate).getTime()
);
---

<MainLayout 
  title="Platform Comparisons & Side-by-Side Reviews | CoursesWyn"
  description="Compare top online course platforms, coding bootcamps, and professional certificate programs. In-depth side-by-side analysis."
>
  <section class="border-b border-border relative overflow-hidden bg-background">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_hsl(var(--primary)_/_0.06),_transparent_60%)]"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20 relative">
      <p class="text-xs font-mono text-primary uppercase tracking-widest mb-3">$ ls -la /compare</p>
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-foreground tracking-tight mb-4">Platform Comparisons</h1>
      <p class="text-lg text-muted-foreground max-w-2xl">Unbiased, technical side-by-side comparisons of the world's leading learning platforms.</p>
    </div>
  </section>

  <section class="py-12 md:py-16 dot-matrix">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post) => (
          <article class="bg-card rounded-lg border border-border overflow-hidden group hover:border-primary/40 transition-all">
            <div class="flex items-center gap-3 px-4 py-2.5 bg-muted/50 border-b border-border">
              <div class="flex items-center gap-1.5">
                <span class="w-2.5 h-2.5 rounded-full bg-muted-foreground/20"></span>
                <span class="w-2.5 h-2.5 rounded-full bg-muted-foreground/20"></span>
                <span class="w-2.5 h-2.5 rounded-full bg-muted-foreground/20"></span>
              </div>
              <span class="text-[11px] font-mono text-muted-foreground tracking-wide uppercase">~/diff/{post.slug.split('/').pop()}</span>
            </div>
            
            <div class="p-6">
              <div class="flex flex-wrap gap-2 mb-4">
                {post.data.tags.map(tag => (
                  <span class="text-[10px] font-mono font-bold text-primary bg-primary/10 px-2 py-0.5 rounded border border-primary/20">
                    {tag.toUpperCase()}
                  </span>
                ))}
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors">
                <a href={`/${post.slug}/`}>{post.data.title}</a>
              </h3>
              <p class="text-sm text-muted-foreground line-clamp-2 mb-6 leading-relaxed">
                {post.data.description}
              </p>
              <div class="flex items-center justify-between pt-6 border-t border-border">
                <span class="text-xs text-muted-foreground font-mono">{formatDate(post.data.updatedAt || post.data.pubDate)}</span>
                <a href={`/${post.slug}/`} class="text-primary text-sm font-bold flex items-center gap-1 group-hover:gap-2 transition-all">
                  Read Analysis <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</MainLayout>
