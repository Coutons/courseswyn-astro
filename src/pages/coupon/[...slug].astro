import Layout from '../../layouts/Layout.astro';

// Get the slug from URL params
const slug = Astro.params.slug || '';

// Generate static paths for known coupon URLs
export async function getStaticPaths() {
  // List of known coupon URLs from your old site
  const knownCoupons = [
    'reactjs-tailwind-css-complete-web-projects',
    'apa-aja',
    'test',
    // Add more known coupon URLs here
  ];

  return knownCoupons.map(coupon => ({
    params: { slug: coupon }
  }));
}
