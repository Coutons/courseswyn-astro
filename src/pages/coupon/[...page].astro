---
import MainLayout from "../../layouts/MainLayout.astro";
import coupons from "../../data/coupons.json";
import DealCard from "../../components/coupon/DealCard.astro";

export async function getStaticPaths({ paginate }: { paginate: any }) {
  return paginate(coupons, { pageSize: 50 });
}

const { page } = Astro.props as { page: any };
const totalCoupons = coupons.length;

const today = new Date();
const lastVerifiedDate = today.toLocaleDateString('id-ID', {
  day: 'numeric',
  month: 'short',
  year: 'numeric'
});

const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: "All Verified Udemy Coupons 2026",
  description: `Browse ${totalCoupons}+ free Udemy coupons and courses across all categories. Updated daily.`,
  dateModified: today.toISOString().split('T')[0],
  mainEntity: {
    "@type": "ItemList",
    numberOfItems: Math.min(totalCoupons, 50),
    itemListElement: (page?.data ?? []).map((c: any, index: number) => ({
      "@type": "ListItem",
      position: index + 1,
      url: `https://courseswyn.com/coupon/${c.slug}`
    }))
  }
};

---

<MainLayout
  title="Udemy Coupon Codes & Promo Deals 2026 | CoursesWyn"
  description={`Get ${totalCoupons}+ working Udemy coupon codes & 100% off courses for 2026. Daily verified discounts on Python, AI, Web Development, Data Science & more. Last verified: ${lastVerifiedDate}. Save up to 100% today!`}
>
  <link rel="canonical" href={`https://courseswyn.com${Astro.url.pathname}`} />
  {page?.url?.prev && <link rel="prev" href={`https://courseswyn.com${page.url.prev}`} />}
  {page?.url?.next && <link rel="next" href={`https://courseswyn.com${page.url.next}`} />}

  <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} />

  <!-- Background Accents -->
  <div class="fixed inset-0 bg-[radial-gradient(ellipse_at_top,_hsl(var(--primary)_/_0.06),_transparent_60%)] pointer-events-none"></div>

  <!-- Premium Hero Section -->
  <section class="relative overflow-hidden pt-20 pb-16 border-b border-border bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex flex-col lg:flex-row gap-12 items-center">
        <div class="flex-1 text-center lg:text-left">
          <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 bg-primary/10 border border-primary/20 rounded-full backdrop-blur-sm">
            <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
            <!-- TAMBAHAN: freshness di badge tanpa jam -->
            <span class="text-primary text-xs font-mono font-bold tracking-[0.2em] uppercase">
              Verified Coupon Database • Update: {lastVerifiedDate}
            </span>
          </div>
         
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black text-foreground mb-6 tracking-tighter leading-[0.9]">
            Udemy <span class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">Promo Codes</span> & Deals 2026
          </h1>
         
          <p class="text-xl text-muted-foreground max-w-2xl mb-10 leading-relaxed font-medium">
            Browse {totalCoupons}+ working Udemy discount codes across all categories.
            Automatically checked and verified daily for {new Date().getFullYear()}.
          </p>
          <div class="flex justify-center lg:justify-start flex-wrap gap-4">
             <div class="px-6 py-3 bg-card border border-border rounded-2xl text-xs font-mono text-muted-foreground flex items-center gap-2">
                <span class="text-primary">$</span> grep --coupons --working-only
             </div>
          </div>
        </div>
        <!-- Terminal Info Card -->
        <div class="w-full lg:w-1/3 flex-shrink-0">
          <div class="bg-card/60 backdrop-blur-md rounded-2xl border border-border overflow-hidden shadow-2xl">
            <div class="flex items-center gap-3 px-4 py-3 bg-muted/40 border-b border-border">
              <div class="flex items-center gap-1.5">
                <span class="w-2.5 h-2.5 rounded-full bg-red-500/40"></span>
                <span class="w-2.5 h-2.5 rounded-full bg-yellow-500/40"></span>
                <span class="w-2.5 h-2.5 rounded-full bg-green-500/40"></span>
              </div>
              <span class="text-[10px] font-mono text-muted-foreground tracking-widest uppercase">README.md</span>
            </div>
            <div class="p-6 space-y-4">
              <div class="text-[11px] text-muted-foreground leading-relaxed font-mono">
                <p class="mb-3 text-foreground font-bold"># STATUS: VERIFIED</p>
                <p class="mb-3">
                  Our system scans instructors' promos and verified 100% OFF coupons daily.
                </p>
                <div class="p-3 bg-background/60 rounded-xl border border-border">
                  <span class="text-primary">&gt;</span> Check counts: <span class="text-primary">{totalCoupons}</span> Active
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Filter Bar -->
  <section class="sticky top-[64px] z-40 border-b border-border bg-background/80 backdrop-blur-xl">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center justify-between">
        <div class="flex flex-wrap gap-2">
          <button data-filter="all" class="filter-btn text-xs font-mono px-4 py-2 rounded-xl border transition-all bg-primary text-white border-primary shadow-lg shadow-primary/20">
            All ({totalCoupons})
          </button>
          <button data-filter="verified" class="filter-btn text-xs font-mono px-4 py-2 rounded-xl border transition-all text-muted-foreground border-border hover:text-foreground hover:border-primary/30">
            Verified ({totalCoupons})
          </button>
        </div>
        <div class="relative w-full sm:w-80">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="absolute left-4 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </svg>
          <input
            id="coupon-search"
            type="text"
            placeholder="Search verified deals..."
            class="w-full pl-11 pr-4 py-3 text-sm font-mono bg-card border border-border rounded-2xl text-foreground placeholder:text-muted-foreground focus:outline-none focus:border-primary/50 transition-all font-bold"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Coupons List -->
  <section class="py-12 md:py-16 dot-matrix">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div id="coupons-container" class="flex flex-col gap-6">
        {(page?.data ?? []).map((coupon: any) => (
          <DealCard {...coupon} variant="list" />
        ))}
      </div>
      <!-- No Results Message -->
      <div id="no-results" class="hidden text-center py-12">
        <div class="bg-card rounded-lg border border-border p-8">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-12 w-12 text-muted-foreground mx-auto mb-4">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </svg>
          <h3 class="text-lg font-semibold text-foreground mb-2">No coupons found</h3>
          <p class="text-muted-foreground">Try adjusting your search or filter criteria</p>
        </div>
      </div>
      <!-- Pagination -->
      {page?.lastPage > 1 && (
        <div class="flex justify-center items-center gap-4 mt-12">
          <nav class="flex space-x-2">
            {page?.url?.prev && (
              <a href={page.url.prev} class="px-4 py-2 border border-border rounded-lg hover:bg-card hover:border-primary/50 text-muted-foreground hover:text-foreground transition-all">
                Previous
              </a>
            )}
            <div class="flex items-center gap-2 text-muted-foreground font-mono text-sm">
              Page {page.currentPage} of {page.lastPage}
            </div>
            {page?.url?.next && (
              <a href={page.url.next} class="px-4 py-2 border border-border rounded-lg hover:bg-card hover:border-primary/50 text-muted-foreground hover:text-foreground transition-all">
                Next
              </a>
            )}
          </nav>
        </div>
      )}
      
      <p class="text-xs text-muted-foreground mt-10 text-center">
  Discover more on CoursesWyn:
  <a href="/blog/" class="text-primary underline">In-depth Course Reviews</a> •
  <a href="/compare" class="text-primary underline">Udemy vs Other Platforms</a> •
  <a href="/providers" class="text-primary underline">All Learning Providers</a>
</p>
    </div>
  </section>

  <section class="border-t border-border py-12 bg-background">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-xl font-bold text-foreground mb-6">
        Udemy Coupon FAQs
      </h2>
      <div class="space-y-4 text-sm text-muted-foreground">
        <p>
          <strong class="text-foreground">Are these Udemy coupons verified?</strong><br />
          Yes. All coupons are automatically checked daily to remove expired deals.
        </p>
        <p>
          <strong class="text-foreground">Do Udemy coupons include certificates?</strong><br />
          Yes. You receive the same certificate as a full-price Udemy course.
        </p>
        <p>
          <strong class="text-foreground">Do I need to register on CoursesWyn?</strong><br />
          No. You can redeem coupons directly on Udemy without signing up here.
        </p>
        <p>
          <strong class="text-foreground">How fresh is the coupon list?</strong><br />
          Updated daily — last verified: {lastVerifiedDate}.
        </p>
        <p>
  <strong class="text-foreground">Why do some coupons expire so quickly?</strong><br />
  Many Udemy coupons have redemption limits (e.g., first 100 users) or short validity periods set by instructors. We remove expired ones daily to keep the list reliable.
</p>
      </div>
    </div>
  </section>

  <script is:inline>
    const searchInput = document.getElementById('coupon-search');
    const couponCards = document.querySelectorAll('.coupon-card');
    const noResults = document.getElementById('no-results');
    const filterButtons = document.querySelectorAll('.filter-btn');
   
    let currentFilter = 'all';
    function filterAndSearch() {
      let visibleCount = 0;
      const searchTerm = searchInput?.value.toLowerCase() || '';
      couponCards.forEach(card => {
        const title = card.dataset.title || '';
        const instructor = card.dataset.instructor || '';
        const category = card.dataset.category || '';
        const description = card.dataset.description || '';
       
        const matchesSearch = !searchTerm ||
          title.includes(searchTerm) ||
          instructor.includes(searchTerm) ||
          category.includes(searchTerm) ||
          description.includes(searchTerm);
       
        const matchesFilter = currentFilter === 'all' || currentFilter === 'verified';
        if (matchesSearch && matchesFilter) {
          card.style.display = '';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });
      if (noResults) {
        noResults.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    }
    if (searchInput) {
      searchInput.addEventListener('input', filterAndSearch);
    }
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        currentFilter = button.dataset.filter || 'all';
       
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-primary/10', 'text-primary', 'border-primary/30');
          btn.classList.add('text-muted-foreground', 'border-border');
        });
       
        button.classList.remove('text-muted-foreground', 'border-border');
        button.classList.add('bg-primary/10', 'text-primary', 'border-primary/30');
       
        filterAndSearch();
      });
    });
  </script>
</MainLayout>