---
import { ClientRouter } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  structuredData?: any;
  type?: string;
  robots?: string;
  ogTitle?: string;
  ogDescription?: string;
}

const { 
  title = "CoursesWyn - Free Udemy Coupons & Daily Deals", 
  description = "Get 100% OFF Udemy coupons and free online courses. Daily updated verified discount codes for development, business, marketing, and more.",
  canonical,
  ogImage,
  structuredData,
  type = "website",
  robots = "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1",
  ogTitle, // Destructure ogTitle
  ogDescription // Destructure ogDescription
} = Astro.props;

const siteUrl = "https://courseswyn.com";
const canonicalUrl = canonical || siteUrl;
const ogImageUrl = ogImage || `${siteUrl}/og-homepage.jpg`;
const finalOgTitle = ogTitle || title; // Define finalOgTitle
const finalOgDescription = ogDescription || description; // Define finalOgDescription
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="p:domain_verify" content="f09121c14fc2448c17b4fbe21e9a5fdf"/>
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    <meta name="author" content="CoursesWyn" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="CoursesWyn" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@courseswyn" />
    <meta name="twitter:creator" content="@courseswyn" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    
    <!-- Additional Meta -->
    <meta name="theme-color" content="#06b6d4" />
    <meta name="msapplication-TileColor" content="#06b6d4" />
    <meta name="keywords" content="udemy coupons, udemy coupon code, udemy free courses, best udemy deals, udemy discount courses, free online courses, programming courses" />
    
    <!-- Structured Data -->
    {structuredData && (
      <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}
    
    <!-- Performance Optimizations -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Font Preloading for better performance -->
    <link rel="preload" href="https://fonts.gstatic.com/s/inter/v13/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuLyfAZ9hiJ-Ek-_EeA.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="https://fonts.gstatic.com/s/inter/v13/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuI6fAZ9hiJ-Ek-_EeA.woff2" as="font" type="font/woff2" crossorigin />
    
    <link rel="dns-prefetch" href="//img-c.udemycdn.com" />
    <link rel="dns-prefetch" href="//www.udemy.com" />
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    
    
    <!-- Google Analytics -->
    <script is:inline>
      // @ts-ignore - Global Google Analytics types
      window.dataLayer = window.dataLayer || [];
      // @ts-ignore
      function gtag(){dataLayer.push(arguments);}
      // @ts-ignore
      gtag('js', new Date());
      // @ts-ignore
      gtag('config', '497507413');
    </script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=497507413"></script>
    
    
    <!-- Client Router for SPA-like navigation -->
    <ClientRouter />
  </head>
  
  <body class="text-foreground font-sans antialiased selection:bg-primary/20 selection:text-primary">
    <Header />
    
    <main class="min-h-screen">
      <slot />
    </main>
    
    <Footer />
    
    <!-- Performance monitoring -->
    
    <!-- Performance monitoring -->
    <script>
      // Performance optimizations
      if ('serviceWorker' in navigator) {
        // Register service worker for caching (optional)
        navigator.serviceWorker.register('/sw.js').catch(() => {
          // Service worker registration failed
        });
      }
      
      // Lazy loading optimization hint
      if ('requestIdleCallback' in window) {
        requestIdleCallback(() => {
          // Preload critical resources during idle time
          const preloadLink = document.createElement('link');
          preloadLink.rel = 'preload';
          preloadLink.href = '/api/popular-courses';
          preloadLink.as = 'fetch';
          document.head.appendChild(preloadLink);
        });
      }
    </script>
  </body>
</html>
