---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  slug: string;
  pubDate: Date;
  tags: string[];
  image?: any;
}

const { title, description, slug, pubDate, image } = Astro.props;
const tags = Astro.props.tags ?? [];

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
}

function tagToLabel(tag: string) {
  return tag
    .split('-')
    .map((segment) => segment.charAt(0).toUpperCase() + segment.slice(1))
    .join(' ');
}
---

<article class="block border border-slate-700 rounded-lg shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden group bg-gradient-to-br from-slate-800/80 to-slate-800/40 backdrop-blur-sm hover:border-blue-500/50" itemscope itemtype="https://schema.org/BlogPosting">
  {image && (
    <a href={`/${slug}/`} aria-label={`Read ${title}`}>
      <Image
        src={image}
        alt={`${title} - course review and guide`}
        widths={[400, 800]}
        sizes="(max-width: 768px) 100vw, 400px"
        class="w-full h-48 object-cover group-hover:brightness-110 transition-all duration-300"
        itemprop="image"
      />
    </a>
  )}

  <div class="p-5 flex flex-col h-full">
    <div class="flex items-center justify-between gap-2 mb-4">
      <time class="text-xs text-slate-500 font-medium" itemprop="datePublished">{formatDate(pubDate)}</time>
      {tags.length > 0 && (
        <span class="text-xs bg-blue-500/20 border border-blue-500/30 text-blue-300 px-3 py-1 rounded-full font-semibold whitespace-nowrap" itemprop="keywords">
          {tagToLabel(tags[0])}
        </span>
      )}
    </div>

    <a href={`/${slug}/`} class="block">
      <h3 class="text-base font-bold text-slate-100 mb-3 line-clamp-2 leading-tight hover:text-blue-400 transition-colors" itemprop="headline">{title}</h3>
    </a>

    <p class="text-sm text-slate-400 mb-4 line-clamp-3 flex-grow" itemprop="description">{description}</p>

    <a href={`/${slug}/`} class="inline-flex items-center gap-2 text-sm text-blue-400 hover:text-blue-300 font-semibold transition-colors">
      Read article â†’
    </a>
    <meta itemprop="url" content={`https://courseswyn.com/${slug}/`} />
    <meta itemprop="author" content="CoursesWyn" />
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
