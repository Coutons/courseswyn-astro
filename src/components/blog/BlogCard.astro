---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  slug: string;
  pubDate: Date;
  tags: string[];
  image?: any;
}

const { title, description, slug, pubDate, tags, image } = Astro.props;

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
}

function tagToLabel(tag: string) {
  return tag
    .split('-')
    .map((segment) => segment.charAt(0).toUpperCase() + segment.slice(1))
    .join(' ');
}
---

<article class="group bg-gradient-to-br from-slate-800/60 to-slate-900/60 rounded-2xl overflow-hidden transition-all duration-300 hover:shadow-lg hover:shadow-indigo-500/20 border border-white/10 backdrop-blur-sm" itemscope itemtype="https://schema.org/BlogPosting">
  {image && (
    <a href={`/${slug}/`} class="block overflow-hidden">
      <Image
        src={image}
        alt={`${title} - course review and guide`}
        widths={[400, 800]}
        sizes="(max-width: 768px) 100vw, 400px"
        class="w-full h-48 object-cover group-hover:scale-105 transition duration-300"
        itemprop="image"
      />
    </a>
  )}

  <div class="p-6 flex flex-col h-full">
    <div class="flex items-center justify-between gap-2 mb-4">
      <time class="text-xs text-white/60 font-medium" itemprop="datePublished">{formatDate(pubDate)}</time>
      {tags.length > 0 && (
        <a href={`/category/${tags[0]}/`} class="text-xs bg-gradient-to-r from-emerald-500/20 to-teal-500/20 text-emerald-300 px-3 py-1.5 rounded-lg hover:from-emerald-500/40 hover:to-teal-500/40 transition-all border border-emerald-500/30 whitespace-nowrap" itemprop="keywords">
          {tagToLabel(tags[0])}
        </a>
      )}
    </div>

    <a href={`/${slug}/`} class="block">
      <h3 class="text-lg font-bold text-white line-clamp-2 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-indigo-400 group-hover:to-purple-400 group-hover:bg-clip-text transition-all" itemprop="headline">{title}</h3>
    </a>

    <p class="text-sm text-white/70 mt-3 line-clamp-3 flex-grow" itemprop="description">{description}</p>

    <a href={`/${slug}/`} class="inline-flex items-center gap-2 mt-6 px-4 py-2 rounded-lg bg-gradient-to-r from-cyan-500/20 to-blue-500/20 text-cyan-300 hover:from-cyan-500/40 hover:to-blue-500/40 font-semibold text-sm transition-all border border-cyan-500/30 w-fit">
      Read article <span>â†’</span>
    </a>
    <meta itemprop="url" content={`https://courseswyn.com/${slug}/`} />
    <meta itemprop="author" content="CoursesWyn" />
  </div>
</article>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
