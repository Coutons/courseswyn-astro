---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  slug: string;
  pubDate: Date;
  tags: string[];
  image?: any;
}

const { title, description, slug, pubDate, tags, image } = Astro.props;

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
}

function tagToLabel(tag: string) {
  return tag
    .split('-')
    .map((segment) => segment.charAt(0).toUpperCase() + segment.slice(1))
    .join(' ');
}
---

<article class="block bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-lg transition-all duration-200 overflow-hidden group" itemscope itemtype="https://schema.org/BlogPosting">
  {image && (
    <a href={`/${slug}/`} aria-label={`Read ${title}`}>
      <Image
        src={image}
        alt={`${title} - course review and guide`}
        widths={[400, 800]}
        sizes="(max-width: 768px) 100vw, 400px"
        class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-200"
        itemprop="image"
      />
    </a>
  )}

  <div class="p-4 flex flex-col h-full">
    <div class="flex items-center justify-between gap-2 mb-3">
      <time class="text-xs text-gray-500 font-medium" itemprop="datePublished">{formatDate(pubDate)}</time>
      {tags.length > 0 && (
        <span class="text-xs bg-purple-100 text-purple-700 px-2 py-1 rounded whitespace-nowrap" itemprop="keywords">
          {tagToLabel(tags[0])}
        </span>
      )}
    </div>

    <a href={`/${slug}/`} class="block">
      <h3 class="text-sm font-semibold text-gray-900 mb-2 line-clamp-2 leading-tight hover:text-purple-600 transition-colors" itemprop="headline">{title}</h3>
    </a>

    <p class="text-sm text-gray-600 mb-3 line-clamp-3 flex-grow" itemprop="description">{description}</p>

    <a href={`/${slug}/`} class="inline-flex items-center gap-2 text-sm text-purple-600 hover:text-purple-700 font-medium transition-colors">
      Read article â†’
    </a>
    <meta itemprop="url" content={`https://courseswyn.com/${slug}/`} />
    <meta itemprop="author" content="CoursesWyn" />
  </div>
</article>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
