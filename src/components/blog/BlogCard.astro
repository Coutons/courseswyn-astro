---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  slug: string;
  pubDate: Date;
  tags: string[];
  image?: any;
}

const { title, description, slug, pubDate, image } = Astro.props;
const tags = Astro.props.tags ?? [];

function formatDate(date: Date) {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
}

function tagToLabel(tag: string) {
  return tag
    .split("-")
    .map((segment) => segment.charAt(0).toUpperCase() + segment.slice(1))
    .join(" ");
}
---

<article
  class="relative group bg-slate-900/40 border border-slate-800 rounded-3xl overflow-hidden transition-all duration-500 hover:border-blue-500/40 hover:bg-slate-800/60 hover:shadow-2xl hover:shadow-blue-500/5"
  itemscope
  itemtype="https://schema.org/BlogPosting"
>
  <!-- Background Glow Effect (Hover) -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-600/5 to-purple-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <div class="flex flex-col md:flex-row relative z-10">
    <!-- Image Section -->
    {
      image && (
        <div class="md:w-2/5 lg:w-1/3 shrink-0 overflow-hidden relative">
          <a href={`/${slug}/`} class="block h-full aspect-video md:aspect-auto">
             <Image
              src={image}
              alt={`${title} - expert course review`}
              widths={[400, 800]}
              sizes="(max-width: 768px) 100vw, 400px"
              class="w-full h-full object-cover transform scale-100 group-hover:scale-105 transition-transform duration-700 brightness-90 group-hover:brightness-105"
              itemprop="image"
            />
            <!-- Overlay for Image -->
             <div class="absolute inset-0 bg-slate-950/20 group-hover:bg-transparent transition-colors duration-500"></div>
          </a>
          
          <!-- Quick Label -->
          {tags.length > 0 && (
            <div class="absolute top-4 left-4">
              <span class="bg-blue-600/90 backdrop-blur-md text-white px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest border border-white/20">
                {tagToLabel(tags[0])}
              </span>
            </div>
          )}
        </div>
      )
    }

    <!-- Content Section -->
    <div class="flex-1 p-6 md:p-8 flex flex-col justify-center">
      <div class="flex items-center gap-3 mb-4">
        <div class="flex items-center gap-2">
           <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
           </svg>
           <time class="text-xs text-slate-400 font-semibold tracking-wide" itemprop="datePublished">
             {formatDate(pubDate)}
           </time>
        </div>
        <span class="text-slate-700">â€¢</span>
        <span class="text-xs text-slate-500 font-medium">By CoursesWyn Expert Review</span>
      </div>

      <a href={`/${slug}/`} class="block group/title">
        <h3
          class="text-xl md:text-2xl font-black text-white mb-4 leading-tight group-hover/title:text-blue-400 transition-colors duration-300"
          itemprop="headline"
        >
          {title}
        </h3>
      </a>

      <p class="text-slate-400 text-sm md:text-base leading-relaxed mb-6 max-w-2xl" itemprop="description">
        {description}
      </p>

      <div class="flex flex-wrap items-center justify-between gap-4 mt-auto border-t border-slate-800/50 pt-6">
        <a
          href={`/${slug}/`}
          class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-700 hover:to-blue-600 text-white text-sm font-bold py-2.5 px-6 rounded-xl shadow-lg shadow-blue-500/10 hover:shadow-blue-500/20 transition-all duration-300 transform hover:-translate-y-0.5 active:translate-y-0"
        >
          Read Expert Analysis
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>

        <div class="flex items-center gap-4 text-xs font-semibold text-slate-500">
           <div class="flex items-center gap-1.5">
             <span class="w-2 h-2 rounded-full bg-green-500"></span>
             Verified Review
           </div>
           <div class="flex items-center gap-1.5">
             <span class="w-2 h-2 rounded-full bg-blue-500"></span>
             Premium Guide
           </div>
        </div>
      </div>
    </div>
  </div>
  
  <meta itemprop="url" content={`https://courseswyn.com/${slug}/`} />
  <meta itemprop="author" content="CoursesWyn" />
</article>
