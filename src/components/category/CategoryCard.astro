---
interface Props {
  category: string;
  subcategories: string[];
  courseCount: number;
}

const { category, subcategories, courseCount } = Astro.props;
const displaySubcategories = subcategories.slice(0, 6);
const remainingCount = subcategories.length - 6;
---

<div class="bg-[#1c252e]/50 border border-[#283046] rounded-2xl p-6 flex flex-col h-full hover:border-[#383d4f] transition-all group">
  <div class="flex flex-col flex-grow">
    <!-- Category Label -->
    <div class="mb-6">
      <span class="inline-block bg-[#1c252e] text-white text-sm font-bold px-4 py-1.5 rounded-lg border border-[#383d4f]">
        {category}
      </span>
    </div>

    <!-- Subcategory Count -->
    <p class="text-gray-400 text-sm mb-6">
      {subcategories.length} subcategories available
    </p>

    <!-- Subcategory List -->
    <ul class="space-y-4 mb-6">
      {displaySubcategories.map((sub) => (
        <li>
          <a 
            href={`/courses/category/${category}?topic=${sub}`} 
            class="text-gray-300 hover:text-white text-sm font-medium transition-colors"
          >
            {sub}
          </a>
        </li>
      ))}
      {remainingCount > 0 && (
        <li class="text-gray-500 text-xs italic pt-1">
          +{remainingCount} more...
        </li>
      )}
    </ul>
  </div>

  <!-- Footer Link -->
  <div class="pt-6 border-t border-[#1c252e]/50">
    <a 
      href={`/courses/category/${category}`} 
      class="text-xs font-bold text-green-500 hover:text-green-400 tracking-wider transition-colors uppercase"
    >
      VIEW ALL {category} COURSES
    </a>
  </div>
</div>
