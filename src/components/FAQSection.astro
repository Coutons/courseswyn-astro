---
import faqData from '../data/faq-home.json';

// FAQ Schema for structured data
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqData.map(faq => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer
    }
  }))
};
---

<!-- FAQ Section -->
<section id="faq" class="py-20 border-b border-border bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <p class="text-xs font-mono text-primary uppercase tracking-widest mb-4">$ cat ~/faq/udemy-coupons</p>
      <h2 class="text-3xl md:text-4xl font-bold text-foreground tracking-tight mb-6 text-balance">
        Frequently Asked Questions About Udemy Coupons
      </h2>
      <p class="text-lg text-muted-foreground max-w-3xl mx-auto leading-relaxed">
        Everything you need to know about udemy coupons, free courses, and how to maximize your learning savings. 
        Get expert answers to common questions about verified udemy deals.
      </p>
    </div>
    
    <!-- FAQ Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {faqData.map((faq, index) => (
        <div class="bg-card rounded-lg border border-border overflow-hidden hover:border-primary/30 transition-all">
          
          {/* Question Header */}
          <div class="p-6 bg-secondary/30 border-b border-border">
            <div class="flex items-start gap-4">
              <div class="w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center text-primary text-sm font-bold flex-shrink-0">
                {index + 1}
              </div>
              <h3 class="text-lg font-semibold text-foreground leading-tight">
                {faq.question}
              </h3>
            </div>
          </div>
          
          {/* Answer */}
          <div class="p-6">
            <div class="prose prose-sm max-w-none text-muted-foreground leading-relaxed">
              <p>{faq.answer}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Additional FAQ Categories -->
    <div class="mt-16 grid md:grid-cols-3 gap-8">
      <div class="bg-background rounded-lg border border-border p-6">
        <h4 class="font-semibold text-foreground mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.742 0 4.99 1.326 4.99 4.942 0 3.616-2.248 4.99-4.942m-9.96 0a5.002 5.002 0 004.471 2.994c-.865.392-1.832.392-2.994 0a5.002 5.002 0 00-4.471-2.994M12 12V9m0 3v3m0-3h.01M5.868 7.5c1.292.612 2.732.612 4.132 0 .865-.392 1.832-.392 2.994 0a5.002 5.002 0 014.471-2.994M5.868 7.5a5.002 5.002 0 014.132 2.994C14.132 0 5.098-1.382 5.098-2.994 0-1.657-.612-3.732-.612-4.132z"></path>
          </svg>
          Getting Started
        </h4>
        <div class="space-y-3 text-sm">
          <a href="/coupon" class="block text-muted-foreground hover:text-primary transition-colors">Browse All Courses</a>
          <a href="/category/it-and-software" class="block text-muted-foreground hover:text-primary transition-colors">IT & Software</a>
          <a href="/category/web-development" class="block text-muted-foreground hover:text-primary transition-colors">Web Development</a>
          <a href="/category/data-science" class="block text-muted-foreground hover:text-primary transition-colors">Data Science</a>
        </div>
      </div>
      
      <div class="bg-background rounded-lg border border-border p-6">
        <h4 class="font-semibold text-foreground mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Savings & Value
        </h4>
        <div class="space-y-3 text-sm">
          <a href="/coupon?sort=free" class="block text-muted-foreground hover:text-primary transition-colors">Free Courses</a>
          <a href="/coupon?sort=popular" class="block text-muted-foreground hover:text-primary transition-colors">Popular Courses</a>
          <a href="/coupon?sort=expiring" class="block text-muted-foreground hover:text-primary transition-colors">Expiring Soon</a>
          <a href="/category/business" class="block text-muted-foreground hover:text-primary transition-colors">Business Courses</a>
        </div>
      </div>
      
      <div class="bg-background rounded-lg border border-border p-6">
        <h4 class="font-semibold text-foreground mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          Support & Help
        </h4>
        <div class="space-y-3 text-sm">
          <a href="/contact-us" class="block text-muted-foreground hover:text-primary transition-colors">Contact Support</a>
          <a href="/about" class="block text-muted-foreground hover:text-primary transition-colors">About Us</a>
          <a href="/privacy" class="block text-muted-foreground hover:text-primary transition-colors">Privacy Policy</a>
          <a href="/terms" class="block text-muted-foreground hover:text-primary transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
    
    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <div class="bg-primary/5 rounded-lg p-8 max-w-2xl mx-auto border border-primary/20">
        <h3 class="text-xl font-semibold text-foreground mb-4">
          Still Have Questions About Udemy Coupons?
        </h3>
        <p class="text-muted-foreground mb-6">
          Our support team is here to help you make the most of free udemy courses. 
          Get personalized assistance and expert guidance for your learning journey.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center items-center">
          <a href="/contact-us" class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-primary-foreground px-6 py-3 rounded-md font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Contact Support Team
          </a>
          <a href="#faq" class="inline-flex items-center gap-2 bg-secondary hover:bg-secondary/80 text-secondary-foreground px-6 py-3 rounded-md font-medium transition-colors border border-border">
            Browse Full FAQ
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Structured Data -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<style>
  .prose p {
    margin-bottom: 0;
  }
</style>
