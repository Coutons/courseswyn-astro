---
interface Props {
  totalCoupons: number;
  currentMonth: string;
  currentYear: number;
}

const { totalCoupons, currentMonth, currentYear } = Astro.props;
---

<!-- Hero Section -->
<section class="relative overflow-hidden border-b border-border bg-background">
  <div class="absolute inset-0 dot-matrix-glow"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_hsl(142_71%_45%_/_0.08),_transparent_60%)]"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24 flex flex-col items-center">
    <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
          100% Off <span class="text-primary">Udemy Coupons</span> {currentMonth} {currentYear}
        </h1>
        <p class="text-xl md:text-2xl text-muted-foreground mb-8 max-w-3xl mx-auto leading-relaxed">
          Get <strong class="text-foreground">verified working Udemy coupons</strong> and <strong class="text-foreground">free Udemy coupon codes</strong> updated daily. 
          <strong class="text-foreground">100% off Udemy coupons</strong> with lifetime access. 
          <strong class="text-foreground">Free Udemy courses</strong> for Python, React, AWS, and more.
        </p>
      <!-- Supporting Content (150-200 words) -->
      <div class="text-lg text-muted-foreground leading-relaxed mb-10 space-y-4">
        <p>
          Discover {totalCoupons}+ <strong class="text-foreground">verified working Udemy coupons</strong> and <strong class="text-foreground">free courses</strong> updated every single day. 
          Our team manually tests each <strong class="text-foreground">udemy coupon code</strong> to ensure you get genuine <strong class="text-foreground">best udemy deals</strong> 
          without any hidden costs or expired offers.
        </p>
        
        <p>
          Stop paying full price for premium education. Whether you're looking for <strong class="text-foreground">udemy discount courses</strong> 
          or <strong class="text-foreground">100% off Udemy coupons</strong>, our verified collection gives you lifetime access 
          to quality courses from top instructors.
        </p>
      </div>
      
      <!-- Primary CTA -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/coupon/" class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-primary-foreground px-8 py-4 rounded-lg font-semibold transition-all text-lg shadow-lg shadow-primary/20 hover:shadow-primary/30">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Browse All {totalCoupons}+ Free Coupons
        </a>
        
        <div class="flex items-center gap-2 text-sm text-muted-foreground">
          <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>Verified Daily • Updated {currentMonth} {currentYear} • No Registration Required</span>
        </div>
      </div>
      
      <!-- Quick Access Section -->
      <div class="mt-12 pt-8 border-t border-border">
        <div class="text-center mb-6">
          <h3 class="text-lg font-semibold text-foreground mb-2">Quick Access</h3>
          <p class="text-sm text-muted-foreground">Jump directly to what you're looking for</p>
        </div>
        <div class="flex flex-wrap justify-center gap-3">
          <a href="#categories" class="inline-flex items-center gap-2 bg-secondary hover:bg-secondary/80 text-secondary-foreground px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
            Browse Categories
          </a>
          <a href="#expiring" class="inline-flex items-center gap-2 bg-orange-500/10 hover:bg-orange-500/20 text-orange-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors border border-orange-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Expiring Deals
          </a>
          <a href="#popular" class="inline-flex items-center gap-2 bg-primary/10 hover:bg-primary/20 text-primary px-4 py-2 rounded-lg text-sm font-medium transition-colors border border-primary/20">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Popular Courses
          </a>
          <a href="/coupon/" class="inline-flex items-center gap-2 bg-green-500/10 hover:bg-green-500/20 text-green-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors border border-green-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            All Coupons
          </a>
        </div>
      </div>
      
      <!-- Trust Indicators -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-12 pt-8 border-t border-border">
        <div class="text-center">
          <div class="text-2xl font-bold text-primary mb-1">{totalCoupons}+</div>
          <div class="text-sm text-muted-foreground">Active Coupons</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-primary mb-1">100%</div>
          <div class="text-sm text-muted-foreground">Verified Codes</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-primary mb-1">24/7</div>
          <div class="text-sm text-muted-foreground">Updates</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-primary mb-1">$0</div>
          <div class="text-sm text-muted-foreground">Total Cost</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .dot-matrix-glow {
    background-image: radial-gradient(rgba(16, 185, 129, 0.03) 1px, transparent 1px);
    background-size: 24px 24px;
  }
</style>
