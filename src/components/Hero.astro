---
interface Props {
  title: string;
  subtitle: string;
  cta?: {
    text: string;
    href: string;
  };
}

const { title, subtitle, cta } = Astro.props;
---

<section class="relative py-20 md:py-32 overflow-hidden">
  <!-- Background Decorative Elements -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-indigo-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <div class="max-w-5xl mx-auto px-4">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 mb-8 px-4 py-2 rounded-full bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border border-indigo-500/20 mx-auto block">
      <span class="w-2 h-2 rounded-full bg-gradient-to-r from-indigo-400 to-purple-400 animate-pulse"></span>
      <span class="text-xs font-semibold text-indigo-300">Verified Daily</span>
    </div>

    <!-- Main Title with Gradient -->
    <div class="text-center mb-8">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-black text-white mb-4 leading-tight">
        {title.split('&').map((part, i) => (
          <>
            {i === 0 ? (
              part
            ) : (
              <>
                <br />
                <span class="bg-gradient-to-r from-indigo-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
                  {part}
                </span>
              </>
            )}
          </>
        ))}
      </h1>
    </div>

    <!-- Description -->
    <div class="max-w-3xl mx-auto mb-12 text-center">
      <p class="text-lg md:text-xl text-white/80 leading-relaxed mb-6">
        {subtitle}
      </p>

      <!-- Key Features -->
      <div class="grid grid-cols-3 gap-4 mb-8">
        <div class="flex items-center justify-center gap-2 text-white/70">
          <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium">100% Verified</span>
        </div>
        <div class="flex items-center justify-center gap-2 text-white/70">
          <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium">Updated Daily</span>
        </div>
        <div class="flex items-center justify-center gap-2 text-white/70">
          <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium">Always Free</span>
        </div>
      </div>
    </div>

    <!-- CTA Button with Premium Styling -->
    {cta && (
      <div class="flex justify-center mb-12">
        <a
          href={cta.href}
          class="group relative px-8 py-4 rounded-full text-base font-semibold text-white transition-all duration-300 overflow-hidden shadow-lg hover:shadow-xl"
          style="background: linear-gradient(135deg, rgb(79, 70, 229) 0%, rgb(139, 92, 246) 100%);"
        >
          <span class="relative z-10 flex items-center gap-2 justify-center">
            {cta.text}
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </span>
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-500"></div>
        </a>
      </div>
    )}

    <!-- Stats Grid -->
    <div class="grid md:grid-cols-3 gap-6 max-w-3xl mx-auto">
      <div class="bg-gradient-to-br from-slate-800/50 to-slate-900/50 rounded-2xl p-6 border border-white/10 backdrop-blur-sm text-center">
        <div class="text-3xl font-black bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-2">
          2,500+
        </div>
        <p class="text-white/60 text-sm">Active Coupons</p>
      </div>
      <div class="bg-gradient-to-br from-slate-800/50 to-slate-900/50 rounded-2xl p-6 border border-white/10 backdrop-blur-sm text-center">
        <div class="text-3xl font-black bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-2">
          50,000+
        </div>
        <p class="text-white/60 text-sm">Courses Reviewed</p>
      </div>
      <div class="bg-gradient-to-br from-slate-800/50 to-slate-900/50 rounded-2xl p-6 border border-white/10 backdrop-blur-sm text-center">
        <div class="text-3xl font-black bg-gradient-to-r from-emerald-400 to-teal-400 bg-clip-text text-transparent mb-2">
          100%
        </div>
        <p class="text-white/60 text-sm">Free & Verified</p>
      </div>
    </div>
  </div>
</section>
