---
interface Props {
  title: string;
  subtitle: string;
  cta?: {
    text: string;
    href: string;
  };
}

const { title, subtitle, cta } = Astro.props;
---

<section class="relative py-20 md:py-32 overflow-hidden bg-gradient-to-br from-slate-900 via-slate-900 to-slate-800">
  <!-- Background Decorative Elements -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <div class="max-w-5xl mx-auto px-4">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 mb-8 px-4 py-2 rounded-full bg-blue-500/20 border border-blue-500/40 mx-auto block">
      <span class="w-2 h-2 rounded-full bg-blue-400 animate-pulse"></span>
      <span class="text-xs font-bold text-blue-300 uppercase tracking-wide">Verified & Updated Daily</span>
    </div>

    <!-- Main Title with Gradient -->
    <div class="text-center mb-8">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-black text-slate-100 mb-4 leading-tight">
        {title.split('&').map((part, i) => (
          <>
            {i === 0 ? (
              part
            ) : (
              <>
                <br />
                <span class="bg-gradient-to-r from-blue-400 to-blue-300 bg-clip-text text-transparent">
                  {part}
                </span>
              </>
            )}
          </>
        ))}
      </h1>
    </div>

    <!-- Description -->
    <div class="max-w-3xl mx-auto mb-12 text-center">
      <p class="text-lg md:text-xl text-slate-400 leading-relaxed mb-6">
        {subtitle}
      </p>

      <!-- Key Features -->
      <div class="grid grid-cols-3 gap-4 mb-10">
        <div class="flex flex-col items-center justify-center gap-2 px-2 py-3 rounded-lg bg-slate-800/50 border border-slate-700">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-xs font-bold text-slate-300">100% Verified</span>
        </div>
        <div class="flex flex-col items-center justify-center gap-2 px-2 py-3 rounded-lg bg-slate-800/50 border border-slate-700">
          <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-xs font-bold text-slate-300">Updated Daily</span>
        </div>
        <div class="flex flex-col items-center justify-center gap-2 px-2 py-3 rounded-lg bg-slate-800/50 border border-slate-700">
          <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-xs font-bold text-slate-300">Always Free</span>
        </div>
      </div>
    </div>

    <!-- CTA Button with Premium Styling -->
    {cta && (
      <div class="flex justify-center mb-16">
        <a
          href={cta.href}
          class="group relative px-10 py-4 rounded-lg text-base font-bold text-white transition-all duration-300 overflow-hidden shadow-lg hover:shadow-blue-500/50"
          style="background: linear-gradient(135deg, rgb(37, 99, 235) 0%, rgb(59, 130, 246) 100%);"
        >
          <span class="relative z-10 flex items-center gap-2 justify-center">
            {cta.text}
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </span>
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-500"></div>
        </a>
      </div>
    )}

    <!-- Stats Grid -->
    <div class="grid md:grid-cols-3 gap-6 max-w-3xl mx-auto">
      <div class="bg-gradient-to-br from-blue-600/20 to-blue-500/10 border border-blue-500/40 rounded-xl p-6 text-center">
        <div class="text-3xl font-black text-blue-300 mb-2">
          2,500+
        </div>
        <p class="text-blue-300/80 text-sm font-medium">Active Coupons</p>
      </div>
      <div class="bg-gradient-to-br from-blue-600/20 to-blue-500/10 border border-blue-500/40 rounded-xl p-6 text-center">
        <div class="text-3xl font-black text-blue-300 mb-2">
          50,000+
        </div>
        <p class="text-blue-300/80 text-sm font-medium">Courses Reviewed</p>
      </div>
      <div class="bg-gradient-to-br from-green-600/20 to-green-500/10 border border-green-500/40 rounded-xl p-6 text-center">
        <div class="text-3xl font-black text-green-300 mb-2">
          100%
        </div>
        <p class="text-green-300/80 text-sm font-medium">Free & Verified</p>
      </div>
    </div>
  </div>
</section>
