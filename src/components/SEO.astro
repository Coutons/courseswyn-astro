---
interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  type?: string;
}

const { title, description, canonical, ogImage, type = "website" } = Astro.props;

const siteUrl = "https://courseswyn.com";
const canonicalUrl = canonical || siteUrl;
const ogImageUrl = ogImage || `${siteUrl}/og-homepage.jpg`;

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "CoursesWyn",
  url: siteUrl,
  logo: {
    "@type": "ImageObject",
    url: `${siteUrl}/logo.png`,
    width: 512,
    height: 512
  },
  description: "Find verified Udemy coupons and free courses. Updated daily with working discount codes.",
  contactPoint: {
    "@type": "ContactPoint",
    contactType: "customer service",
    url: `${siteUrl}/contact-us`
  },
  sameAs: [
    "https://twitter.com/courseswyn",
    "https://facebook.com/courseswyn"
  ]
};

// Website Schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "CoursesWyn",
  url: siteUrl,
  description: description,
  potentialAction: {
    "@type": "SearchAction",
    target: `${siteUrl}/coupon/?q={search_term}`,
    "query-input": "required name=search_term"
  },
  publisher: {
    "@type": "Organization",
    name: "CoursesWyn"
  }
};
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content="udemy coupons, udemy coupon code, udemy free courses, best udemy deals, udemy discount courses, free online courses, programming courses, web development, data science, business courses" />
<meta name="author" content="CoursesWyn" />
<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="CoursesWyn" />
<meta property="og:locale" content="en_US" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@courseswyn" />
<meta name="twitter:creator" content="@courseswyn" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />

<!-- Additional Meta -->
<meta name="theme-color" content="#10b981" />
<meta name="msapplication-TileColor" content="#10b981" />
<meta name="generator" content={Astro.generator} />

<!-- Structured Data -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title="CoursesWyn RSS Feed" href="/rss.xml" />

<!-- Preconnect for Performance -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
