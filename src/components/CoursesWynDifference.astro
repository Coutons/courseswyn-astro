---
import coupons from '../data/coupons.json';

const verifiedToday = coupons.filter(c => {
  if (c.createdAt) {
    const today = new Date();
    const created = new Date(c.createdAt);
    const daysSinceCreation = Math.ceil((today.getTime() - created.getTime()) / (1000 * 60 * 60 * 24));
    return daysSinceCreation <= 1;
  }
  return false;
}).length;
const expiringSoon = coupons.filter(c => {
  if (c.expiresAt) {
    const expires = new Date(c.expiresAt);
    const today = new Date();
    const daysUntilExpiry = Math.ceil((expires.getTime() - today.getTime()) / (1000 * 60 * 60 * 24));
    return daysUntilExpiry <= 3 && daysUntilExpiry >= 0;
  }
  return false;
}).length;
