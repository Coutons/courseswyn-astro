---
// Udemy Personal Plan Promo
import udemyImage from '../assets/images/Udemy Personal Plan Offers.png';
---

<section class="py-16 bg-[#1c252e]">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-[#1c252e] border border-[#2d3748] rounded-2xl overflow-hidden shadow-xl">
      <div class="grid grid-cols-1 lg:grid-cols-[35%_65%] gap-6 items-center p-6 lg:p-8">
        <!-- Left: Content -->
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4">
            Udemy Personal Plan
          </h2>
          <p class="text-gray-300 text-lg mb-6">
            Get unlimited access to 26,000+ top Udemy courses, anytime, anywhere. Learn the skills you need to reach your goals.
          </p>
          
          <!-- Features -->
          <div class="space-y-4 mb-8">
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-[#10b981]/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-[#10b981]" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="text-white font-semibold mb-1">Access 26,000+ courses</h3>
                <p class="text-gray-400 text-sm">Learn from industry experts in tech, business, design, and more</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-[#10b981]/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-[#10b981]" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="text-white font-semibold mb-1">Learn at your own pace</h3>
                <p class="text-gray-400 text-sm">Lifetime access to courses with new content added monthly</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-[#10b981]/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-[#10b981]" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="text-white font-semibold mb-1">Get certificates</h3>
                <p class="text-gray-400 text-sm">Earn certificates of completion to showcase your achievements</p>
              </div>
            </div>
          </div>
          
          <!-- CTA Button -->
          <a 
            href="https://trk.udemy.com/c/6564357/3775958/39854" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 bg-[#10b981] text-white rounded-lg hover:bg-[#059669] transition-colors font-bold text-lg shadow-lg hover:shadow-xl"
          >
            Start Free Trial
          </a>
        </div>
        
        <!-- Right: Image/Illustration -->
        <div class="hidden lg:block">
          <div class="relative h-80 flex items-center justify-center">
            <div class="absolute inset-0 bg-gradient-to-br from-[#10b981]/5 to-transparent rounded-2xl"></div>
            <img 
              src={udemyImage.src} 
              alt="Udemy Personal Plan Offers - Premium Learning Access"
              class="w-full h-full object-contain rounded-2xl shadow-2xl"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
