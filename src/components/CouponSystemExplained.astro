---
import coupons from '../data/coupons.json';

const totalCoupons = coupons.length;
const avgDuration = coupons.length > 0 
  ? Math.round(coupons.reduce((sum, c) => {
    if (c.expiresAt && c.createdAt) {
      const expires = new Date(c.expiresAt);
      const created = new Date(c.createdAt);
      return sum + Math.max(0, (expires.getTime() - created.getTime()) / (1000 * 60 * 60 * 24)); // days
    }
    return sum + 30; // default 30 days if no expiry
  }, 0) / coupons.length)
  : 30;
const expiringToday = coupons.filter(c => {
  if (c.expiresAt) {
    const expires = new Date(c.expiresAt);
    const today = new Date();
    const daysUntilExpiry = Math.ceil((expires.getTime() - today.getTime()) / (1000 * 60 * 60 * 24));
    return daysUntilExpiry <= 1 && daysUntilExpiry >= 0;
  }
  return false;
}).length;
