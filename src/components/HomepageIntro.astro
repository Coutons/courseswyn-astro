---
import coupons from '../data/coupons.json';

const totalCoupons = coupons.length;
const freeCoupons = coupons.filter(c => c.price === 0).length;
const avgDiscount = coupons.length > 0 
  ? Math.round(coupons.reduce((sum, c) => sum + ((c.originalPrice || c.price || 100) - (c.price || 0)), 0) / coupons.reduce((sum, c) => sum + (c.originalPrice || c.price || 100), 0) * 100)
