---
const { url, text, class: className = "" } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener sponsored"
  class={`inline-flex items-center gap-2 rounded-lg bg-blue-600/20 border border-blue-500/40 px-4 py-2.5 text-sm font-semibold text-blue-300 transition-all duration-300 hover:bg-blue-600/30 hover:border-blue-500/60 hover:text-blue-200 ${className}`}
  onclick={`if(typeof gtag !== 'undefined') { gtag('event', 'affiliate_click', { event_category: 'engagement', event_label: '${text.replace(/'/g, "\\'")}', value: 1 }); }`}
>
  {text}
  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
    ></path>
  </svg>
</a>
