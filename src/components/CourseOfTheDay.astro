---
import coupons from '../data/coupons.json';

// Get the most recent course with 5.0 rating as "Course of the Day"
const courseOfDay = coupons
  .filter((course: any) => course.rating === 5.0)
  .sort((a: any, b: any) => {
    const dateA = new Date(a.updatedAt || 0).getTime();
    const dateB = new Date(b.updatedAt || 0).getTime();
    return dateB - dateA;
  })[0];

const price = courseOfDay.price;
const originalPrice = courseOfDay.originalPrice;
const saveAmount = originalPrice && originalPrice > price ? Math.round(originalPrice - price) : 0;

const subcategorySlug = courseOfDay.subcategory ? courseOfDay.subcategory.toLowerCase().replace(/\s+/g, '-') : '';
const categorySlug = courseOfDay.category ? courseOfDay.category.toLowerCase().replace(/\s+/g, '-') : '';
const badgeLink = courseOfDay.subcategory ? `/courses/subcategory/${subcategorySlug}` : `/courses/category/${categorySlug}`;
---

<section class="py-16 bg-[#1c252e]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-white">
        Course of the Day
      </h2>
    </div>

    <!-- Horizontal Card -->
    <div class="bg-[#28323d] rounded-2xl overflow-hidden border border-white/5 shadow-2xl group hover:border-green-500/30 transition-all duration-500">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-0">
        <!-- Left: Course Image (40%) -->
        <div class="lg:col-span-2 relative aspect-video lg:aspect-auto overflow-hidden">
          <img 
            src={courseOfDay.image} 
            alt={courseOfDay.title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-r from-black/40 to-transparent"></div>
          
          <!-- HOT & NEW Badge -->
          <div class="absolute top-4 left-4 flex flex-col gap-2">
            <span class="px-3 py-1 bg-gradient-to-r from-red-600 to-orange-500 text-white text-[10px] font-black rounded-lg shadow-xl animate-pulse uppercase tracking-wider border border-white/10">
              ðŸ”¥ HOT & NEW
            </span>
            <span class="px-3 py-1 bg-yellow-500 text-black text-[10px] font-black rounded-lg shadow-xl uppercase tracking-wider border border-white/10 w-max">
              â˜… TOP RATED
            </span>
          </div>
        </div>
        
        <!-- Right: Course Details (60%) -->
        <div class="lg:col-span-3 p-8 lg:p-12 flex flex-col justify-center relative">
          <!-- Subcategory & Date Meta -->
          <div class="flex items-center gap-2 mb-2 text-[10px] text-gray-500 font-bold uppercase tracking-widest leading-none">
            <a 
                href={badgeLink}
                class="text-[#10b981] hover:underline relative z-20"
            >
                {courseOfDay.subcategory || courseOfDay.category}
            </a>
          </div>

          <!-- Title -->
          <h3 class="text-2xl lg:text-3xl font-bold text-white mb-4 leading-tight group-hover:text-green-400 transition-colors">
            {courseOfDay.title}
          </h3>
          
          <div class="flex items-center gap-3 mb-6 text-sm text-gray-400">
            <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <span class="font-medium text-gray-300">By <span class="text-white">{courseOfDay.instructor || "Expert Instructor"}</span></span>
            <span class="w-1 h-1 bg-gray-600 rounded-full mx-1"></span>
            <span class="text-gray-400 flex items-center gap-1.5 uppercase font-bold text-[10px] tracking-widest leading-none">
                <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L2 7l10 5 10-5-10-5zm0 9l2.5-1.25L12 8.5l-2.5 1.25L12 11zm0 2.5l-5-2.5-5 2.5L12 22l10-8.5-5-2.5-5 2.5z"/></svg>
                Udemy
            </span>
          </div>
          
          <!-- Description -->
          <p class="text-gray-400 mb-8 leading-relaxed lg:text-lg opacity-90 line-clamp-3">
            {courseOfDay.description || courseOfDay.seoDescription || 'Master this subject through hands-on projects, expert insights, and real-world applications to become an industry-ready professional.'}
          </p>
          
          <!-- Meta Info Row -->
          <div class="flex flex-wrap items-center gap-4 mb-8 text-sm">
            {/* Duration */}
            <div class="flex items-center gap-2 text-gray-300 bg-[#1a1d29] px-3 py-1.5 rounded-lg border border-[#2d3748]">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="font-bold">{courseOfDay.duration || '32h'}</span>
            </div>
            
            {/* Rating */}
            {courseOfDay.rating && (
              <div class="flex items-center gap-2 text-gray-300 bg-[#1a1d29] px-3 py-1.5 rounded-lg border border-[#2d3748]">
                <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                <span class="font-bold">{courseOfDay.rating}</span>
              </div>
            )}
            
            {/* Students */}
            {courseOfDay.students && (
              <div class="flex items-center gap-2 text-gray-300 bg-[#1a1d29] px-3 py-1.5 rounded-lg border border-[#2d3748]">
                <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
                <span class="font-bold">{courseOfDay.students > 1000 ? `${(courseOfDay.students/1000).toFixed(1)}k` : courseOfDay.students}</span>
              </div>
            )}

            {/* Language */}
            <span class="px-3 py-1.5 bg-[#1a1d29] text-gray-400 text-xs font-bold rounded-lg border border-[#2d3748] uppercase tracking-widest">
                {courseOfDay.language || "English"}
            </span>
          </div>
          
          {/* Price & CTA Section */}
          <div class="flex flex-col sm:flex-row items-center justify-between gap-8 pt-6 border-t border-[#374151]/50 mt-auto">
            <div class="flex flex-col items-center sm:items-start leading-none gap-2">
              <div class="flex items-center gap-3">
                {originalPrice && originalPrice > price && (
                  <span class="text-gray-500 line-through text-lg font-medium">${originalPrice}</span>
                )}
                <span class={`text-4xl lg:text-5xl font-black ${price === 0 ? 'text-[#10b981] animate-pulse drop-shadow-[0_0_12px_rgba(16,185,129,0.4)]' : 'text-white'}`}>
                  {price === 0 ? 'FREE' : `$${price}`}
                </span>
              </div>
              
              <div class="flex items-center gap-3">
                {saveAmount > 0 ? (
                    <span class="bg-orange-500/10 text-orange-500 text-[11px] font-black px-2.5 py-1 rounded border border-orange-500/20 uppercase tracking-widest shadow-sm">
                        {price === 0 ? "100% OFF" : `${Math.round(((originalPrice - price) / originalPrice) * 100)}% OFF`}
                    </span>
                ) : price === 0 ? (
                    <span class="bg-red-600 text-white text-[11px] font-black px-2.5 py-1 rounded shadow-lg uppercase tracking-widest border border-white/10">100% OFF</span>
                ) : null}

                <span class="text-[#10b981] text-[11px] font-bold flex items-center gap-1.5 uppercase tracking-widest">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                    Verified Deal
                </span>
              </div>
            </div>
            
            <a 
              href={courseOfDay.url}
              target="_blank"
              rel="nofollow noopener"
              class="w-full sm:w-auto px-12 py-5 bg-gradient-to-r from-[#059669] to-[#10b981] text-white rounded-2xl hover:shadow-2xl hover:shadow-green-500/30 hover:scale-105 active:scale-95 transition-all font-black text-xl flex items-center justify-center gap-4 uppercase tracking-widest group/btn shadow-xl shadow-green-500/10"
            >
              <span>Get Coupon</span>
              <svg class="w-6 h-6 transition-transform group-hover/btn:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

